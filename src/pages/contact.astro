---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Contact — Get Details">
  <section class="section">
    <h1 class="h1">Contact</h1>
    <p class="lead">Interested in classroom pilots or pricing? Send us a note.</p>
    <form action="https://formspree.io/f/meorkyqz" method="POST" class="card" style="max-width:560px;margin-top:1rem">
      <label style="display:block;margin-top:.75rem">
        <span>Name</span><br/>
        <input name="name" required style="width:100%;padding:.8rem;border:1px solid var(--border);border-radius:12px"/>
      </label>
      <label style="display:block;margin-top:.75rem">
        <span>Email</span><br/>
        <input type="email" name="email" required style="width:100%;padding:.8rem;border:1px solid var(--border);border-radius:12px"/>
      </label>
      <label style="display:block;margin-top:.75rem">
        <span>Message</span><br/>
        <textarea name="message" rows="4" required style="width:100%;padding:.8rem;border:1px solid var(--border);border-radius:12px"></textarea>
      </label>
      <input type="hidden" name="_subject" value="Website contact: DNA Assembly Education" />
      <button type="submit" class="btn primary" style="margin-top:1rem">Send</button>
      <p class="muted" style="margin-top:.5rem">We’ll reply by email within 1–2 business days.</p>
    </form>
  </section>
</Layout>

