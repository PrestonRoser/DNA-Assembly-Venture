---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Founders — Team">
  <section class="section">
    <p class="kicker">Founders</p>
    <div class="grid-vertical grid-vertical--spaced" style="margin-top:1.25rem">

      <!-- Esteban -->
      <article class="">
        <div style="display:flex;gap:1rem;align-items:center">
          <div style="width:84px;height:84px;border-radius:16px;background:var(--pastel-blue)"></div>
          <div>
            <h1 class="h1" style="margin:0">Esteban Gardea — Founder</h1>
            <p class="muted" style="margin:.15rem 0 0">Biochemical engineering at ASU. Product design, 3‑D printing, classroom usability.</p>
            <div style="display:flex;gap:.5rem;flex-wrap:wrap;margin-top:.5rem">
              <a class="btn-primary" href="https://www.linkedin.com/in/esteban-gardea-8a00a9232/" aria-label="Esteban LinkedIn">LinkedIn</a>
              <a class="btn-primary" href="mailto:gardeaesteban992@gmail.com">Email</a>
            </div>
          </div>
        </div>
        <p style="margin-top:.75rem">
          Leads prototyping and manufacturing. Designs the snap‑fit geometry so base‑pairing is intuitive.
          Bridges biotechnology concepts with durable, classroom‑ready parts.
        </p>
      </article>

      <!-- Preston -->
      <div class="person">
	<img
          src="/images/preston-headshot.png"
          alt="Preston Roser headshot"
          class="headshot"
          loading="lazy"
          width="96"
	  height="96"
	/>

        <div class="person-body">
	  <h1 class="h1">Preston Roser — Co-founder</h1>
	    <p class="muted">
	      Computer Science at ASU. Curriculum, software, outreach.
	    </p>

	  <div class="person-actions">
	    <a class="btn-primary" href="https://www.linkedin.com/in/prestonroser/" aria-label="Preston LinkedIn">LinkedIn</a>
 	    <a class="btn-primary" href="mailto:prestonroser@gmail.com">Email</a>
 	    <a class="btn-primary" href="https://github.com/PrestonRoser" aria-label="Preston GitHub">GitHub</a>
          </div>

	  <p class="muted" style="margin-top:.75rem">
	    Builds teacher resources and the digital platform for updates. Focused on access-first design, clean docs, and smooth classroom adoption.
	  </p>
	</div>
      </div>

    <!-- Business socials (bottom block) -->
    <div class="" style="margin-top:1rem; margin-left:3rem;">
      <p class="kicker">SproutForge3D LLC</p>
      <div style="display:flex;flex-wrap:wrap;gap:.5rem">
        <a class="btn-primary" href="mailto:sproutforged@gmail.com">sproutforged@gmail.com</a>
        <a class="btn-primary" href="https://instagram.com/sproutforged" target="_blank" rel="noopener">@sproutforged</a>
        <a class="btn-primary" href="https://sproutforge3d.etsy.com" target="_blank" rel="noopener">Etsy store</a>
      </div>
    </div>
  </section>
</Layout>


