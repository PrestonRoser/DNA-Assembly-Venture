---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
const { title = "DNA Assembly Education", description = "Hands-on STEM DNA/mRNA learning kit and classroom resources" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Manrope:wght@600;700;800&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --bg: #f7f7fb;
        --surface: #ffffff;
        --text: #0f172a;
        --muted: #475569;
        --border: #e2e8f0;
        --pastel-red:#FBCFE8;
        --pastel-green:#BBF7D0;
        --pastel-yellow:#FDE68A;
        --pastel-blue:#BFDBFE;
        --brand-text:#1E3A8A;
        --brand:#2563EB;
        --brand-hover:#1D4ED8;
        --shadow:0 10px 30px rgba(2, 6, 23, .06);
        --nav-height:64px;

        /* New font vars */
        --font-sans: "Inter", ui-sans-serif, system-ui, sans-serif;
        --font-display: "Manrope", "Inter", ui-sans-serif, system-ui, sans-serif;
      }

      * { box-sizing:border-box }

      html, body {
        margin:0;
        background:var(--bg);
        color:var(--text);
        font-family: var(--font-sans);
      }

      /* Global anchor style with brand color */
      a {
        text-decoration: underline;
        text-underline-offset: 3px;
        color: rgb(31 75 184);
      }
      a:hover { color: rgb(38 95 230); }

      .container { max-width:1180px; margin:0 auto; padding:0 1rem; }
      .section { padding:4rem 0; }
      .h1 {
        font-family: var(--font-display);
        font-weight:800;
        font-size:clamp(2rem,4.5vw,3rem);
        line-height:1.1;
        margin:0;
      }
      .h2 {
        font-family: var(--font-display);
        font-weight:700;
        font-size:1.75rem;
        margin:0 0 .25rem;
      }
      .lead { font-size:1.125rem; line-height:1.65; color:var(--muted); max-width:65ch; }
      .kicker { text-transform:uppercase; letter-spacing:.16em; font-weight:600; color:var(--muted); font-size:.78rem; }
      .card { background:var(--surface); border:1px solid var(--border); border-radius:18px; box-shadow:var(--shadow); padding:1.25rem; }
      .grid-2 { display:grid; gap:1.75rem; }
      @media(min-width:960px){ .grid-2 { grid-template-columns:1.15fr .85fr } }
      .hr { height:1px; background:var(--border); margin:2.25rem 0; }

      /* Sticky header wrapper */
      .nav-wrap {
        position:sticky; top:0; z-index:40;
        background:rgba(255,255,255,0.88);
        -webkit-backdrop-filter:saturate(180%) blur(10px);
        backdrop-filter:saturate(180%) blur(10px);
        border-bottom:1px solid rgba(59,124,255,0.15);
      }
    </style>
  </head>
  <body class="min-h-dvh bg-neutral-50 text-neutral-900">
    <div class="nav-wrap">
      <div class="container">
        <Navbar />
      </div>
    </div>
    <main class="container">
      <slot />
    </main>
    <footer class="section" style="border-top:1px solid var(--border)">
      <div class="container">
        <Footer />
      </div>
    </footer>
  </body>
</html>

