---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
const { title = "DNA Assembly Education", description = "Hands-on STEM DNA/mRNA learning kit and classroom resources" } = Astro.props;
import "../styles/global.css";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Manrope:wght@600;700;800&display=swap" rel="stylesheet" />

  </head>
  <body class="min-h-dvh bg-neutral-50 text-neutral-900">
    <div class="nav-wrap">
      <div class="container">
        <Navbar />
      </div>
    </div>

    <main class="container">
      <slot />
    </main>

    <footer class="section footer-divider">
      <div class="container">
        <Footer />
      </div>
    </footer>
  </body>
</html>

